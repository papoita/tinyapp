<!-- @format -->

<header>
	<nav class="navbar navbar-expand-md navbar-dark bg-primary">
		<a class="navbar-brand" href="/urls">TinyApp </a>
		<button
			class="navbar-toggler"
			type="button"
			data-toggle="collapse"
			data-target="#navbarNavAltMarkup"
			aria-controls="navbarNavAltMarkup"
			aria-expanded="false"
			aria-label="Toggle navigation"
		>
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarNavAltMarkup">
			<div class="navbar-nav">
				<a class="nav-item nav-link" href="/urls">My URLs</a>
				<a class="nav-item nav-link" href="/urls/new">Create New URL</a>
	<% if(!username){ %>
				<div class="navbar-nav justify-content-end">
					<form
						class="form-inline align-items-right"
						action="/login"
						method="POST"
					>
						<input
							class="form-control inline"
							type="text"
							name="username"
							placeholder="username"
							style="width: 100px; margin: 1em"
						/>
						<button type="submit" class="btn btn-light">Login</button>
					</form>
				</div>
				<% } %>
				
				<% if(username){ %>
				<div class="navbar-nav justify-content-end">Welcome </div>
				<div><%= username %> </div>
				<button type="submit" class="btn btn-light" action="/logout"
						method="POST">Logout</button>
				<% } %>
			</div>			
		</div>
	</nav>
</header>
