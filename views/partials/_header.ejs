<!-- @format -->

<header>
	<nav class="navbar navbar-expand-md navbar-dark bg-primary">
		<a class="navbar-brand" href="/urls"
			>TinyApp <% if (username){ %> <%= username %> <% } %></a
		>
		<button
			class="navbar-toggler"
			type="button"
			data-toggle="collapse"
			data-target="#navbarNavAltMarkup"
			aria-controls="navbarNavAltMarkup"
			aria-expanded="false"
			aria-label="Toggle navigation"
		>
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarNavAltMarkup">
			<div class="navbar-nav">
				<a class="nav-item nav-link" href="/urls">My URLs</a>
				<a class="nav-item nav-link" href="/urls/new">Create New URL</a>

				<form class="form-inline align-items" action="/login" method="POST">
					<label for="username">Username:</label>
					<input
						class="form-control inline"
						type="text"
						name="username"
						placeholder="labberusername"
						style="width: 100px; margin: 1em"
					/>
					<button type="submit" class="btn btn-light">Submit</button>
				</form>
			</div>
		</div>
	</nav>
</header>
